<p id="notice"><%= notice %></p>

<h1>Complaints</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Invoice</th>
      <th>Order</th>
      <th>Lot</th>
      <th>Issue date</th>
      <th>Notes</th>
      <th>Status</th>
      <th>With vendor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.user %></td>
        <td><%= complaint.invoice %></td>
        <td><%= complaint.order %></td>
        <td><%= complaint.lot %></td>
        <td><%= complaint.issue_date %></td>
        <td><%= complaint.notes %></td>
        <td><%= complaint.status %></td>
        <td><%= complaint.with_vendor %></td>
        <td><%= link_to 'Show', complaint %></td>
        <td><%= link_to 'Edit', edit_complaint_path(complaint) %></td>
        <td><%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

